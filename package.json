{
  "name": "dashboard-app",
  "version": "1.0.0",
  "description": "Dashboard application with separate frontend and backend",
  "scripts": {
    "postinstall": "npm run install:dependencies",
    "install:dependencies": "cd frontend && npm install && cd ../backend && npm install",
    "install:all": "npm install",
    "dev": "node run-dev.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "start:production": "cd backend && npm run start:production",
    "docker:build": "docker build -t dashboard-app .",
    "docker:run": "docker run -p 3000:3000 dashboard-app"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}